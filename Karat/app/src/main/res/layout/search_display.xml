<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC333A7E"
            android:padding="5dp">

            <Button
                android:id="@+id/minus2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textView18"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FAFAFA"
                android:fontFamily="@font/lato"
                android:text="-"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageview_widget" />

            <ImageView
                android:id="@+id/imageview_widget"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="77dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Meat"
                android:textColor="#EBFF00"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageview_widget"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_widget"
                android:layout_marginStart="75dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Price"
                android:textColor="#EBFF00"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageview_widget"
                app:layout_constraintTop_toBottomOf="@+id/name_widget" />

            <Button
                android:id="@+id/addtoCart"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_below="@+id/homequantity"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#BDE0B7"
                android:fontFamily="@font/lato"
                android:text="Add to Cart"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homequantity" />

            <EditText
                android:id="@+id/homequantity"
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textView18"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/minus2"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FAFAFA"
                android:digits="0123456789"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:inputType="number"
                android:text="1"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/minus2"
                app:layout_constraintTop_toBottomOf="@+id/imageview_widget" />

            <Button
                android:id="@+id/plus2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textView18"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/homequantity"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FAFAFA"

                android:lineSpacingExtra="10sp"

                android:text="+"
                android:textColor="#070707"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/homequantity"
                app:layout_constraintTop_toBottomOf="@+id/imageview_widget" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:fontFamily="@font/fredoka_one"
                android:text="Name"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:fontFamily="@font/fredoka_one"
                android:textColor="#FFFFFF"
                android:text="Price" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:fontFamily="@font/fredoka_one"
                android:textColor="#FFFFFF"
                android:text="Discount" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView16"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:fontFamily="@font/fredoka_one"
                android:textColor="#FFFFFF"
                android:text="itemQty" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView17"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:fontFamily="@font/fredoka_one"
                android:textColor="#FFFFFF"
                android:text="Category" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_widget"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Description"
                android:textColor="#FFFFFF" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>