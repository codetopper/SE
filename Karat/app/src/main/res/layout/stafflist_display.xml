<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/shomecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC333A7E"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageview_widget"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/name_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#F4980E"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editBtn"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_below="@+id/category"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FAFAFA"
                android:fontFamily="@font/lato"
                android:text="Edit"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageview_widget"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_read"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Price"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageview_widget"
                app:layout_constraintTop_toBottomOf="@+id/name_widget" />

            <TextView
                android:id="@+id/disc_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_widget"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:text="Discount"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qty_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/disc_widget"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:text="itemQty"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qty_widget"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:text="Category"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:maxLines="5"
                android:text="description_text"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/itemQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discount"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:text="itemQty"
                android:textColor="#F4980E"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_widget"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:text="Description"
                android:textSize="12sp"
                android:textColor="#F4980E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:text="Discount"
                android:textStyle="bold"
                android:textColor="#F4980E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemQty"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:text="Category"
                android:textColor="#F4980E"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_widget"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageview_widget"
                android:layout_toRightOf="@+id/imageview_widget"
                android:fontFamily="@font/lato"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="#F4980E"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/arrowdown"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_below="@id/imageview_widget"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/downarrow" />

            <ImageView
                android:id="@+id/arrowup"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_below="@id/description_text"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/uparrow" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>